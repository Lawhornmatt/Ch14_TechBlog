<div class="row commentRow">
  {{#if (complexIf commenter sess_username)}}
  <div class="postHeaderUser">
    <p>#{{@index}} {{#if (complexIf commenterid opid)}}[OP]{{/if}} {{commenter}} says:</p>
    <p>Posted on {{format_time updatedAt}}</p>
  </div>
  {{else}}
  <div class="postHeaderForeign">
    <p>#{{@index}} {{#if (complexIf commenterid opid)}}[OP]{{/if}} {{commenter}} says:</p>
    <p>Posted on {{format_time updatedAt}}</p>
  </div>
  {{/if}}
  <div class="postContent">
    <p class="text-wrap text-break">{{commentbody}}</p>
  </div>
</div>
