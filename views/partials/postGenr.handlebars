<div class="row postRow">
  {{#if (complexIf sess_username user.username)}}
  <div class="postHeaderUser">
    <p>Title of the Post</p>
    <p>Posted by {{user.username}} on {{format_time createdAt}}</p>
  </div>
  {{else}}
  <div class="postHeaderForeign">
    <p>Title of the Post</p>
    <p>Posted by {{user.username}} on {{format_time createdAt}}</p>
  </div>
  {{/if}}
  <div class="postContent">
    <p>{{postbody}}</p>
  </div>
</div>